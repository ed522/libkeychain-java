<!--

Example:

<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE extension SYSTEM "extensions.dtd">

<extension>
    <grpname>group</grpname>
    <extname>extension</extname>

    <msg>
        <name>coords</name>
        <field>
            <name>x</name>
            <type>f64</type>
        </field>
        <field>
            <name>y</name>
            <type>f64</type>
        </field>
    </msg>

    <msg>
        <name>proved-command</name>
        <field>
            <name>cmd</name>
            <type>str</name>
            <proof factor="10" />
        </field>
    </msg>

    <routine>
        <name>oncoords</name>
        <trigger>coords</trigger>
        <jref>
            <jclass>com.ed522.example.ExampleHandler</jclass>
            <jmethod>handleRoutine()</jmethod>
        </jref>
    </routine>

</extension>
-->


<!ELEMENT extension (grpname, extname, msg*, routine*)>

<!ELEMENT grpname (#PCDATA)>
<!ELEMENT extname (#PCDATA)>

<!-- general use -->
<!ELEMENT name (#PCDATA)>

<!ELEMENT msg (name, field*, proof?)>
<!ELEMENT field (name, type)>
<!ELEMENT type (#PCDATA)>
<!ELEMENT proof EMPTY>

<!ATTLIST proof factor CDATA #REQUIRED>
<!ATTLIST proof signed CDATA "false">

<!ELEMENT routine (name, trigger, (jref?, cppref?, rsref?))>
<!ELEMENT trigger (#PCDATA)>

<!ELEMENT jref (jclass, jmethod)>
<!ELEMENT jclass (#PCDATA)>
<!ELEMENT jmethod (#PCDATA)>
<!ATTLIST jref register CDATA "true">

<!ELEMENT cppref (exportsym)>
<!ELEMENT exportsym (#PCDATA)>